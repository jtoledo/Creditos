<%=javascript_include_tag "dojo.js"%>
<%= stylesheet_link_tag 'dojin.js', :media => 'all' %>
<script type="text/javascript" charset="utf-8">
	dojo.require("dojo.widget.*");
	
	function load_app(id,ruta){
		
			switch(id)
			{
				case 0:window.location="http://"+ruta+"/solicitudes/list"
									   break
				case 1:window.location="http://"+ruta+"/creditos/list"
									   break
									  
				case 2:window.location="http://"+ruta+"/recuperacion/list"
									   break
				case 3:window.location="http://"+ruta+"/reportes/list"
									   break
				case 4:window.location="http://"+ruta+"/caprapcheque/"
									   break
				
				case 5:window.location="http://"+ruta+"/index/logout"
								   	break	
				case 6:window.location="http://"+ruta+"/fichasinficha/list" 
									break	
			}
		}
</script>


