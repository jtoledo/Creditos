<h6>
<p align="right">Usted esta en el sistema como :<font color="green"><%=session[:nameuser]%></font><%=link_to "<b>(Salir)</b>","logout"%></p>
</h6>
<center>
<div  class="outerbar">
<div dojoType="FisheyeList"
	itemWidth="50" itemHeight="50"
	itemMaxWidth="100" itemMaxHeight="100"
	orientation="horizontal"
	effectUnits="2"
	itemPadding="10"
	attachEdge="top"
	labelEdge="bottom"
	enableCrappySvgSupport="true">

    <%#@per=session[:permiso]%>
          <%#while @per!=""%>
              <%#@pxm=@per[0,@per.index(",")]%>
              <%#@per=@per[@per.index(",")+1,@per.length]%>
              
      <div dojoType="FisheyeListItem" onClick="load_app(0,'<%=request.env["HTTP_HOST"]%>');" 
      		iconsrc="/images/barra/reporte.png" caption="Session comit&eacute;n de credito ">
      </div>
		<div dojoType="FisheyeListItem" onClick="load_app(1,'<%=request.env["HTTP_HOST"]%>');" 
      		iconsrc="/images/barra/credito.png" caption="Cr&eacute;ditos autorizados">
      </div>
		<div dojoType="FisheyeListItem" onClick="load_app(2,'<%=request.env["HTTP_HOST"]%>');" 
      		iconsrc="/images/barra/cobrar.png" caption="Recuperaciones">
      </div>
	  <div dojoType="FisheyeListItem" onClick="load_app(3,'<%=request.env["HTTP_HOST"]%>');" 
      		iconsrc="/images/barra/4reporte.png" caption="Reporte de cr&eacute;ditos">
      </div>
        <div dojoType="FisheyeListItem" onClick="load_app(4,'<%=request.env["HTTP_HOST"]%>');"
    					iconsrc="/images/barra/cheque.png" caption="Captura r&aacute;pida de cheques" >
    		</div>
		<div dojoType="FisheyeListItem" onClick="load_app(5,'<%=request.env["HTTP_HOST"]%>');"
    					iconsrc="/images/barra/powerdown.png" caption="Salir" >
    		</div>
	<div dojoType="FisheyeListItem" onClick="load_app(6,'<%=request.env["HTTP_HOST"]%>');"
                                        iconsrc="/images/barra/icon_texteditor.png" caption="Dep&oacute;sito sin Ficha" >
	</div>

</div>

</div>
</center>
